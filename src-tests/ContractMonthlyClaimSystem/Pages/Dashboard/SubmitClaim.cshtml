@page 
@model ContractMonthlyClaimSystem.Models.LecturerDashboardViewModel
@{
	ViewData["Title"] = "Dashboard";
}

<h2 class="text-center mt-2">New Claim</h2>

<form method="post" class="my-4 p-4 border rounded bg-light" enctype="multipart/form-data">
	<div class="form-group mb-3">
		<label>Select Course</label>
		<div>
			<select class="form-control" asp-for="SelectedCourse">
				<option value="">-- Select a Course --</option>
				@foreach (var course in Model.Courses)
				{
					<option value="@course.Value">@course.Text</option>
				}
			</select>
			<span asp-validation-for="SelectedCourse" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mb-3">
		<label>Hours Worked</label>
		<div>
			<input type="number" step="1" class="form-control" asp-for="HoursWorked">
			<span asp-validation-for="HoursWorked" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mb-3">
		<label>Hourly Rate</label>
		<div>
			<input type="number" step="0.01" class="form-control" asp-for="HourlyRate">
			<span asp-validation-for="HourlyRate" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mb-3">
		<label>Total Amount</label>
		<div>
			<input type="number" step="0.01" class="form-control" asp-for="TotalAmount">
			<span asp-validation-for="TotalAmount" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mb-3">
		<label>Work Description</label>
		<div>
			<textarea class="form-control" asp-for="Description" rows="3"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mb-3">
		<label>Supporting Documents (PDF, DOCX, XLSX, max 5 files, max size 10MB each)</label>
		<div>
			<input type="file" class="form-control" asp-for="SupportingDocuments" multiple accept=".pdf,.docx,.xlsx" />
			<span asp-validation-for="SupportingDocuments" class="text-danger"></span>
		</div>
	</div>
	
	<button type="submit" class="btn btn-primary w-100">Submit Claim</button>
</form>

